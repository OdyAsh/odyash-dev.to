  {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Resume Latest Edit Session",
        "type": "shell",
        "command": "code",
        "args": [
          "--wait",
          "--goto",
          // doesn't work, gives the error "could not resume changes from the cloud for id {0}"
          "${command:workbench.editSessions.actions.resumeLatest}"
        ],
        "isBackground": true,
        "problemMatcher": []
      },
      {
        "label": "Update dev-to-git.json paths",
        "type": "shell",
        "command": "npm",
        "args": [
          "run",
          "update-paths"
        ],
        "presentation": {
          "reveal": "silent",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Watch for file changes",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-Command",
          "While($true) { npm run update-paths; Start-Sleep -Seconds 10 }"
        ],
        "isBackground": true,
        "runOptions": {
          "runOn": "folderOpen"
        },
        "presentation": {
          "reveal": "never",
          "panel": "dedicated"
        },
        "problemMatcher": []
      }
    ]
  }
  